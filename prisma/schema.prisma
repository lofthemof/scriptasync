generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Testament {
  OLD
  NEW
}

///////////////////////////////////////////////////
////////////// REQUIRED FOR AUTH.JS ///////////////
///////////////////////////////////////////////////
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]
  notes         Note[]

  lastOpenedBibleId   String?
  lastOpenedBookId    String?
  lastOpenedChapterId String?
  lastOpenedBible     Bible?   @relation(fields: [lastOpenedBibleId], references: [id])
  lastOpenedBook      Book?    @relation(fields: [lastOpenedBookId], references: [id])
  lastOpenedChapter   Chapter? @relation(fields: [lastOpenedChapterId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deleted   Boolean   @default(false)
  deletedAt DateTime?

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

///////////////////////////////////////////////////
////////////// REQUIRED FOR AUTH.JS ///////////////
///////////////////////////////////////////////////
model Bible {
  id       String @id @default(cuid())
  key      String @unique // "ESV", "KJV", "NIV"
  name     String // "English Standard Version"
  language String // "en"

  books Book[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]

  @@map("bibles")
}

model Book {
  id        String    @id @default(cuid())
  slug      String
  name      String
  testament Testament
  order     Int
  chapters  Chapter[]
  verses    Verse[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bible     Bible    @relation(fields: [bibleId], references: [id])
  bibleId   String
  users     User[]

  @@unique([bibleId, slug])
  @@unique([bibleId, order])
  @@index([bibleId])
  @@index([order])
  @@map("books")
}

model Chapter {
  id        String   @id @default(cuid())
  bookId    String   @map("book_id")
  slug      String
  number    Int
  verses    Verse[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  book  Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)
  users User[]

  @@unique([bookId, number])
  @@unique([bookId, slug])
  @@index([bookId])
  @@map("chapters")
}

model Verse {
  id        String @id @default(cuid())
  bookId    String @map("book_id")
  chapterId String @map("chapter_id")
  number    Int
  text      String @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  book       Book        @relation(fields: [bookId], references: [id], onDelete: Cascade)
  chapter    Chapter     @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  noteVerses NoteVerse[]

  @@unique([chapterId, number])
  @@index([bookId, chapterId])
  @@map("verses")
}

model Note {
  id      String  @id @default(cuid())
  userId  String
  content String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  verses NoteVerse[]

  @@map("notes")
}

model NoteVerse {
  id      String @id @default(cuid())
  noteId  String
  verseId String

  note  Note  @relation(fields: [noteId], references: [id], onDelete: Cascade)
  verse Verse @relation(fields: [verseId], references: [id], onDelete: Cascade)

  @@unique([noteId, verseId])
  @@index([verseId])
  @@map("note_verses")
}
